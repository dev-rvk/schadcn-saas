# .env.example for apps/api

# Server Configuration
PORT=3001

# Database URL (PostgreSQL)
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# Auth0 API Configuration
# Get these from your Auth0 Dashboard > Applications > APIs
# This should be the API you registered for this backend service.
AUTH0_API_ISSUER_BASE_URL="https://YOUR_AUTH0_DOMAIN/" # e.g., https://dev-yourtenant.us.auth0.com/
AUTH0_API_AUDIENCE="YOUR_API_IDENTIFIER" # e.g., https://api.yourapplication.com
